public class Solution {
    public void sortColors(int[] nums) {
        int red,white,blue;
        red=white=blue=0;
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]==0)red++;
            else if (nums[i]==1)blue++;
            else white++;
        }
        for(int i=0;i<nums.length;i++)
        {
            if(i<red)nums[i]=0;
            else if (i<red+blue)nums[i]=1;
            else nums[i]=2;
        }
        
    }
}
